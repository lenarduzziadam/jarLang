summon "stdlib.vase"

# Test some functions
chant "expect 7"
chant max(5, 7)          # expect 7
chant commune(3, 4)      # expect 7

chant "expect 5"
chant min(5, 7)          # expect 5
chant clamp(10, 0, 5)    # expect 5

chant "expect 8"
chant banish(10, 2)      # expect 8

chant "expect 42"
